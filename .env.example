# PostgreSQL
POSTGRES_USER=ticker_user
POSTGRES_PASSWORD=ticker_pass
POSTGRES_DB=ticker_db
POSTGRES_INITDB_ARGS="--encoding=UTF8 --locale=C"

# RabbitMQ
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBITMQ_DEFAULT_VHOST=/

# Python
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
PYTHONPATH=/app

# Application Execution
EXECUTION_TIME=16:30
TICKERS_PER_REQUEST=10
REQUEST_DELAY_MS=300
MONITORED_TICKERS=PETR4.SA,VALE3.SA,WEGE3.SA

# Database Connection
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
DB_ECHO=false

# RabbitMQ Connection
RABBITMQ_URL=amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASS}@rabbitmq:5672/${RABBITMQ_DEFAULT_VHOST}
RABBITMQ_QUEUE=ticker_updates
RABBITMQ_MAX_RETRIES=10

# Rate Limiting
BACKOFF_BASE=2
BACKOFF_MAX_SECONDS=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Timezone
TIMEZONE=America/Sao_Paulo
